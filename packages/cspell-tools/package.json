{
  "name": "@cspell/cspell-tools",
  "version": "7.0.1-alpha.8",
  "description": "Tools to assist with the development of cSpell",
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "bin": {
    "cspell-tools-cli": "bin.js"
  },
  "scripts": {
    "build": "pnpm run build-schema && pnpm run compile",
    "build-schema": "ts-json-schema-generator --no-top-ref --path src/config/config.ts --type RunConfig --validation-keywords deprecated  -o  ./cspell-tools.config.schema.json",
    "compile": "tsc -p .",
    "watch": "tsc -p . -w",
    "clean-build": "pnpm run clean && pnpm run build",
    "clean": "shx rm -rf dist temp coverage \"*.tsbuildInfo\"",
    "coverage": "pnpm coverage:vitest",
    "coverage:vitest": "vitest run --coverage",
    "test:watch": "vitest",
    "test": "vitest run",
    "update-snapshot": "vitest run -u"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/streetsidesoftware/cspell.git"
  },
  "keywords": [
    "cSpell",
    "Word",
    "List",
    "Compiler"
  ],
  "files": [
    "bin.js",
    "dist",
    "cspell-tools.config.schema.json",
    "!**/*.tsbuildInfo",
    "!**/__mocks__",
    "!**/*.test.*",
    "!**/*.spec.*",
    "!**/*.map"
  ],
  "author": "Jason Dent",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/streetsidesoftware/cspell/labels/cspell-tools"
  },
  "homepage": "https://github.com/streetsidesoftware/cspell#readme",
  "dependencies": {
    "@cspell/cspell-pipe": "workspace:*",
    "commander": "^11.0.0",
    "cosmiconfig": "8.0.0",
    "cspell-trie-lib": "workspace:*",
    "gensequence": "^5.0.2",
    "glob": "^10.3.3",
    "hunspell-reader": "workspace:*",
    "yaml": "^2.3.1"
  },
  "engines": {
    "node": ">=16"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/jest": "^29.5.3",
    "@types/shelljs": "^0.8.12",
    "jest": "^29.6.2",
    "lorem-ipsum": "^2.0.8",
    "shelljs": "^0.8.5",
    "ts-json-schema-generator": "^1.2.0"
  },
  "main": "bin.js"
}
