{
  "name": "cspell-tools",
  "version": "4.1.11",
  "description": "Tools to assist with the development of cSpell",
  "typings": "dist/index.d.ts",
  "bin": {
    "cspell-tools": "bin.js"
  },
  "scripts": {
    "build": "tsc -p .",
    "watch": "tsc -p . -w",
    "clean-build": "npm run clean && npm run build",
    "clean": "rimraf dist && rimraf temp",
    "lint": "tslint --project tsconfig.json",
    "coverage": "jest --coverage",
    "test-watch": "jest --watch",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/streetsidesoftware/cspell.git"
  },
  "keywords": [
    "cSpell",
    "Word",
    "List",
    "Compiler"
  ],
  "files": [
    "bin.js",
    "dist/**",
    "!**/*.map",
    "!**/*.test.*"
  ],
  "author": "Jason Dent",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/streetsidesoftware/cspell/labels/cspell-tools"
  },
  "homepage": "https://github.com/streetsidesoftware/cspell#readme",
  "dependencies": {
    "commander": "^4.0.1",
    "cspell-io": "^4.0.19",
    "cspell-trie-lib": "^4.1.7",
    "cspell-util-bundle": "^4.0.8",
    "fs-extra": "^8.1.0",
    "gensequence": "^3.0.1",
    "glob": "^7.1.6",
    "hunspell-reader": "^3.2.0",
    "iconv-lite": "^0.4.24",
    "minimatch": "^3.0.4"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/**/*.test.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "json",
      "html"
    ]
  },
  "engines": {
    "node": ">=10.0.0"
  }
}
