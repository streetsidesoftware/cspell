{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "../../tsconfig.esm.json",
    "compilerOptions": {
        "skipLibCheck": true,
        "moduleResolution": "Node16",
        "lib": ["es2020", "DOM"],
        "module": "ES2020",
        "target": "es2020",
        "outDir": "dist/esm",
        "types": ["node"]
    },
    "include": [
        "src"
    ]
}
