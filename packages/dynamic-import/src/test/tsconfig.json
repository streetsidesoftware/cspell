{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "tsBuildInfoFile": "../../dist/compile.test.tsbuildInfo",
        "composite": true,
        "incremental": true,
        "skipLibCheck": true,
        "rootDir": ".",
