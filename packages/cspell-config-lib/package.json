{
  "name": "cspell-config-lib",
  "version": "8.8.1",
  "description": "CSpell Config library",
  "keywords": [
    "cspell",
    "config"
  ],
  "author": "Jason Dent <jason@streetsidesoftware.nl>",
  "homepage": "https://github.com/streetsidesoftware/cspell/tree/main/packages/cspell-config#readme",
  "license": "MIT",
  "type": "module",
  "sideEffects": false,
  "exports": {
    ".": "./dist/index.js"
  },
  "directories": {
    "dist": "dist"
  },
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "!**/*.tsbuildInfo",
    "!**/__mocks__",
    "!**/*.test.*",
    "!**/*.spec.*",
    "!**/*.map"
  ],
  "scripts": {
    "build": "tsc -p .",
    "watch": "tsc -p . -w",
    "clean": "shx rm -rf dist temp coverage \"*.tsbuildInfo\"",
    "clean-build": "pnpm run clean && pnpm run build",
    "coverage": "vitest run --coverage --pool=forks",
    "test-watch": "vitest",
    "test": "vitest run --pool=forks"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/streetsidesoftware/cspell.git",
    "directory": "packages/cspell-config-lib"
  },
  "bugs": {
    "url": "https://github.com/streetsidesoftware/cspell/labels/cspell-config"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@cspell/cspell-types": "workspace:*",
    "comment-json": "^4.2.3",
    "yaml": "^2.4.2"
  }
}
