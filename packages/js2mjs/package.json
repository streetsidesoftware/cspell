{
  "name": "js2mjs",
  "version": "1.0.0",
  "description": "Rename ESM .js files to .mjs",
  "private": true,
  "bin": "bin.mjs",
  "type": "module",
  "keywords": [
    "ESM",
    "js",
    "mjs",
    "TypeScript",
    "d.ts",
    "d.mts"
  ],
  "author": "Jason Dent",
  "license": "MIT",
  "scripts": {
    "build": "tsc -p .",
    "build:fixtures": "tsc -p fixtures/sample",
    "watch": "tsc -p . --watch",
    "coverage": "vitest run --coverage",
    "lint": "pnpm eslint && pnpm prettier",
    "lint:fix": "pnpm eslint:fix && pnpm prettier:fix",
    "lint:spell": "cspell \"**\"",
    "prettier": "prettier -c .",
    "prettier:fix": "prettier -w .",
    "eslint": "eslint .",
    "eslint:fix": "eslint . --fix",
    "app": "node ./bin.mjs",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepare": "pnpm build"
  },
  "dependencies": {
    "chalk": "^5.2.0",
    "commander": "^10.0.0",
    "globby": "^13.1.3"
  },
  "devDependencies": {
    "@tsconfig/node16": "^1.0.3",
    "typescript": "^4.9.5",
    "vitest": "^0.28.5"
  },
  "engines": {
    "node": ">=14.20"
  },
  "files": [
    "bin.mjs",
    "dist/**",
    "!**/*.test.*",
    "!**/test.*",
    "!**/*.map"
  ]
}
