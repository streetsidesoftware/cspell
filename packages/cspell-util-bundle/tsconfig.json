{
	"compilerOptions": {
		"target": "es2018",
		"lib": ["es2018"],
		"module": "commonjs",
		"moduleResolution": "node",
		"sourceMap": true,
		"alwaysStrict": true,
        "declaration": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"strictNullChecks": true,
		"esModuleInterop": true,
		"strict": true,
		"strictFunctionTypes": false,
		"forceConsistentCasingInFileNames": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"outDir": "dist"
	},
	"include": [
		"src"
	]
}
