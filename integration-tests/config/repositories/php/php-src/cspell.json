{
    "$schema": "https://raw.githubusercontent.com/streetsidesoftware/cspell/master/cspell.schema.json",
    "globRoot": "${cwd}",
    "ignorePaths": [
        "**/timezonedb.h",
        "**/data_file.c",
        "parse_date.c",
        "itab.c",
        "itab.h",
        "pcre2_jit_compile.c",
        "unicode_data.h",
        "unicode_table*.h",
        "zend_vm_execute.h",
        "zend_vm_handlers.h"
    ],
    "dictionaryDefinitions": [
        {
            "name": "mnemonics",
            "path": "./mnemonics.txt"
