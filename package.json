{
  "name": "cspell-monorepo",
  "version": "1.0.0",
  "description": "cspell monorepo.",
  "main": "bin.js",
  "private": true,
  "scripts": {
    "build": "lerna run build",
    "build-schema": "lerna run build-schema",
    "check-spelling": "npx cspell **/{*.ts,*.md}",
    "clean-build": "lerna run clean-build",
    "clean": "lerna run clean",
    "coverage": "npm run gen-coverage",
    "gen-coverage": "lerna run coverage",
    "bootstrap": "lerna bootstrap",
    "bootstrap-ci": "lerna bootstrap --ci && npm run clean-build",
    "install-lerna": "npm run bootstrap",
    "lint-travis": "lerna run lint-travis",
    "prepublishOnly": "npm run clean-build",
    "pub": "npm install && npm test && lerna publish",
    "test-spec": "lerna run test-spec",
    "test-ts": "lerna run test-ts",
    "test-watch": "lerna run --parallel test-watch",
    "travis-coverage": "npm run gen-coverage && globcat packages/*/coverage/lcov.info | coveralls",
    "test": "lerna run test && ajv -s ./cspell.schema.json -d cspell.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/streetsidesoftware/cspell.git"
  },
  "keywords": [
    "spelling",
    "code",
    "CI/CD"
  ],
  "author": "Jason Dent",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/streetsidesoftware/cspell/issues"
  },
  "homepage": "https://github.com/streetsidesoftware/cspell#readme",
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/configstore": "^4.0.0",
    "@types/fs-extra": "^9.0.0",
    "@types/glob": "^7.1.1",
    "@types/jest": "^25.2.2",
    "@types/lorem-ipsum": "^1.0.2",
    "@types/micromatch": "^3.1.1",
    "@types/minimatch": "^3.0.3",
    "@types/node": "^12.12.39",
    "@types/xregexp": "^4.3.0",
    "ajv-cli": "^3.1.0",
    "chai": "^4.2.0",
    "coveralls": "^3.1.0",
    "cspell-dict-en_us": "^1.2.26",
    "cspell-dict-es-es": "^1.0.18",
    "cspell-dict-nl-nl": "^1.0.23",
    "globcat": "^1.2.2",
    "jest": "^25.5.4",
    "lerna": "^3.21.0",
    "lorem-ipsum": "^1.0.6",
    "rimraf": "^3.0.2",
    "source-map-support": "^0.5.19",
    "ts-jest": "^25.5.1",
    "ts-json-schema-generator": "^0.65.0",
    "ts-loader": "^6.2.2",
    "tslint": "^6.1.2",
    "typescript": "^3.9.2",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11"
  },
  "dependencies": {}
}
