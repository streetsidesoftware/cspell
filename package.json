{
  "name": "cspell-monorepo",
  "version": "1.0.0",
  "description": "cspell monorepo.",
  "main": "bin.js",
  "private": true,
  "scripts": {
    "build": "lerna run build",
    "build-schema": "lerna run build-schema",
    "build-integration-tests": "cd ./integration-tests && npm i",
    "check-spelling": "npx cspell '**/*.*'",
    "clean-build": "lerna run clean-build",
    "clean": "lerna run clean",
    "coverage": "lerna run coverage --stream && npm run coverage-collect",
    "coverage-collect": "globcat packages/*/coverage/lcov.info > lcov.info",
    "install": "lerna bootstrap --ci",
    "lint": "eslint . --fix && prettier -w \"**/*.{md,yaml,yml,json}\"",
    "lint-ci": "eslint . && prettier -c \"**/*.{md,yaml,yml,json}\"",
    "prepare": "npm run symlink && npm run clean-build",
    "pub-version": "lerna version --conventional-commits",
    "pub-version-pre": "lerna version --conventional-prerelease",
    "pub-version-grad": "lerna version --conventional-graduate",
    "pub": "npm install && npm test && lerna publish --conventional-commits --dist-tag cspell4",
    "pub-lerna-from-git": "lerna publish from-git --dist-tag cspell4",
    "symlink": "node build_tools/bin/symlink.js packages",
    "test-spec": "lerna run test-spec",
    "test-ts": "lerna run test-ts",
    "test-watch": "lerna run --parallel test-watch",
    "test": "lerna run test && ajv -s ./cspell.schema.json -d cspell.json",
    "test-integrations": "cd ./integration-tests && npm run integration-tests",
    "update-packages": "lerna exec \"npx npm-check-updates -t minor -u && rimraf node_modules package-lock.json && npm i\" && lerna bootstrap --no-ci",
    "update-snapshots": "lerna run update-snapshots --scope cspell-integration-tests"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/streetsidesoftware/cspell.git"
  },
  "keywords": [
    "spelling",
    "code",
    "CI/CD"
  ],
  "author": "Jason Dent",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/streetsidesoftware/cspell/issues"
  },
  "homepage": "https://github.com/streetsidesoftware/cspell#readme",
  "devDependencies": {
    "@cspell/dict-en_us": "^1.2.45",
    "@cspell/dict-es-es": "^1.0.28",
    "@cspell/dict-nl-nl": "^1.0.35",
    "@types/chai": "^4.3.1",
    "@types/configstore": "^5.0.1",
    "@types/eslint": "^8.4.1",
    "@types/fs-extra": "^9.0.13",
    "@types/glob": "^7.2.0",
    "@types/jest": "^27.4.1",
    "@types/micromatch": "^4.0.2",
    "@types/minimatch": "^3.0.5",
    "@types/node": "^17.0.30",
    "@types/shelljs": "^0.8.11",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.21.0",
    "ajv-cli": "^5.0.0",
    "chai": "^4.3.6",
    "coveralls": "^3.1.1",
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^26.1.5",
    "eslint-plugin-prettier": "^4.0.0",
    "globcat": "^2.0.1",
    "jest": "^27.5.1",
    "lerna": "^4.0.0",
    "lorem-ipsum": "^2.0.4",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "shelljs": "^0.8.5",
    "source-map-support": "^0.5.21",
    "ts-jest": "^27.1.4",
    "ts-json-schema-generator": "^1.0.0",
    "ts-loader": "^9.3.0",
    "tslint": "^6.1.2",
    "typescript": "^4.6.4",
    "webpack": "^5.72.0",
    "webpack-cli": "^4.9.2"
  }
}
