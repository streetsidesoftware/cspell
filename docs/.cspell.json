{
    "dictionaries": ["custom-dictionary"],
    "dictionaryDefinitions": [
        {
            "name": "custom-dictionary",
            "path": "./.cspell/custom-dictionary.txt",
            "addWords": true
        }
    ],
    "enableFiletypes": ["ruby"],
    "overrides": [
        {
            "filename": [
                ".cspell.json",
                "types/cspell-types/interfaces/FileSettings.md",
                "types/cspell-types/interfaces/LanguageSetting.md",
                "types/cspell-types/interfaces/OverrideSettings.md",
                "types/cspell-types/interfaces/Settings.md"
            ],
            "ignoreWords": ["colour", "canot"]
        }
    ],
    "ignorePaths": ["_site/**"]
}
