{
    "printWidth": 120,
    "singleQuote": true,
    "overrides": [
        {
            "files": "**/*.{yaml,yml}",
            "options": {
                "singleQuote": false
            }
        },
        {
            "files": "**/*.{html,htm}",
            "options": {
                "tabWidth": 2
            }
        },
        {
            "files": "**/*.{jsonc,json,md}",
            "options": {
                "trailingComma": "none"
            }
        }
    ]
}
