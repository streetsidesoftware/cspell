{
    "printWidth": 120,
    "singleQuote": true,
    "overrides": [
        {
            "files": "**/*.{yaml,yml}",
            "options": {
                "singleQuote": false
            }
        },
        {
            "files": "**/*.jsonc",
            "options": {
                "trailingComma": "none"
            }
        },
        {
            "files": ["**/*.md"],
            "options": {
                "trailingComma": "none"
            }
        }
    ]
}
