{
    "$schema": "https://raw.githubusercontent.com/streetsidesoftware/cspell/master/cspell.schema.json",
    "version": "0.2",
    "dictionaryDefinitions": [
        {
            "name": "workspace",
            "path": "./cspell-dict.txt",
            "description": "Custom Workspace Dictionary"
        }
    ],
    "dictionaries": [
        "workspace"
    ],
    "ignorePaths": [
        ".eslintignore",
        ".gitattributes",
        ".gitignore",
        ".prettierignore",
        "**/.gitignore",
        "**/.vscode/**",
        "**/{cspell.*,cSpell.*,.cspell.*,cspell.config.*}",
        "*.{png,jpg,pdf}",
        "**/*.snap",
        "**/*.trie",
        "**/coverage/**",
        "**/dist/**",
        "**/jest.config.js",
        "**/node_modules/**",
        "**/package*.json",
        "**/tsconfig.json",
        "test-packages/test-cspell-tools/src/*.txt",
        "cspell.json",
        "integration-tests/config/config.json",
        "integration-tests/config/repositories/**",
        "integration-tests/repositories/**",
        "integration-tests/snapshots/**",
        "lcov.info",
        "package*.json",
        "packages/*/samples/**",
        "packages/Samples/**",
        "temp"
    ],
    "ignoreWords": [
        "commitcomment"
    ]
}
