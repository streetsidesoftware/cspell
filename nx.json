{
    "tasksRunnerOptions": {
        "default": {
            "runner": "nx/tasks-runners/default",
            "options": {
                "cacheableOperations": [
                    "build"
                ],
                "cacheDirectory": "./temp/nxCache"
            }
        }
    },
    "targetDefaults": {
        "build": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                "{projectRoot}/dist",
                "{projectRoot}/lib"
            ]
        }
    }
}
